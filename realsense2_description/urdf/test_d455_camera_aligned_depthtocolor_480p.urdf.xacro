<?xml version="1.0"?>
<robot name="realsense2_camera" xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:arg name="use_nominal_extrinsics" default="false"/>
  <xacro:arg name="add_plug" default="false" />
  <xacro:arg name="name" default="camera" />
  <xacro:arg name="topics_ns" default="camera" />
  <xacro:arg name="publish_pointcloud" default="false" />
  <xacro:arg name="cam_pose_config" default="$(find contact_simulation)/config/cam_pose.yaml" />

  <xacro:include filename="$(find realsense2_description)/urdf/_d455_aligned_depthtocolor_480p.urdf.xacro" />

  <xacro:property name="yaml_file" value="$(arg cam_pose_config)" />
  <xacro:property name="cam_pose" value="${xacro.load_yaml(yaml_file)}"/>
  
  <xacro:property name="cam_x" value="${cam_pose['cam_pose']['x']}" />
  <xacro:property name="cam_y" value="${cam_pose['cam_pose']['y']}" />
  <xacro:property name="cam_z" value="${cam_pose['cam_pose']['z']}" />
  <xacro:property name="cam_roll" value="${cam_pose['cam_pose']['roll']}"  />
  <xacro:property name="cam_pitch" value="${cam_pose['cam_pose']['pitch']}" />
  <xacro:property name="cam_yaw" value="${cam_pose['cam_pose']['yaw']}"   />

  <xacro:arg name="fps"       default="30"     doc="Frame rate of depth and color image" />

  <link name="world" />
  <xacro:sensor_d455 parent="world" use_nominal_extrinsics="$(arg use_nominal_extrinsics)" add_plug="$(arg add_plug)" name="$(arg name)" topics_ns="$(arg topics_ns)" fps="$(arg fps)" publish_pointcloud="$(arg publish_pointcloud)">
    <origin xyz="${cam_x} ${cam_y} ${cam_z}" rpy="${cam_roll} ${cam_pitch} ${cam_yaw}"/>
  </xacro:sensor_d455>
</robot>
